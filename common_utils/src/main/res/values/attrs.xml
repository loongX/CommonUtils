<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="FlowLayout">
        <attr name="width_margin" format="dimension" />
        <attr name="height_margin" format="dimension" />
    </declare-styleable>

    <declare-styleable name="WheelViewPager">
        <attr name="play_interval" format="integer" />
        <attr name="page_loop" format="boolean" />
        <attr name="scroll_duration" format="integer" />
    </declare-styleable>

    <declare-styleable name="EditImageView">
        <attr name="fit_mode">
            <enum name="no_limit" value="0" />
            <enum name="fit_long" value="1" />
            <enum name="fit_short" value="2" />
        </attr>
        <attr name="line_color" format="color" />
        <attr name="line_width" format="dimension" />
        <attr name="border_width" format="dimension" />
        <attr name="mask_color" format="color" />
        <attr name="is_round" format="boolean" />
    </declare-styleable>

    <declare-styleable name="VerificationCodeView">
        <attr name="verify_num" format="integer" />
        <attr name="android:textSize" />
        <attr name="verify_normal_bg" format="reference" />
        <attr name="verify_highlight_bg" format="reference" />
        <attr name="verify_error_bg" format="reference" />
        <attr name="verify_normal_color" format="color" />
        <attr name="verify_error_color" format="color" />
        <attr name="verify_width" format="dimension" />
        <attr name="verify_height" format="dimension" />
        <attr name="verify_margin" format="dimension" />
        <attr name="verify_error_text_size" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ChrysanthemumLoadingView">
        <attr name="default_color" format="color" />
        <attr name="seg_length" format="dimension" />
        <attr name="seg_space" format="dimension" />
        <attr name="seg_width" format="dimension" />
        <attr name="seg_count" format="integer" />
        <attr name="animate_duration" format="integer" />
    </declare-styleable>

    <declare-styleable name="LinePagerTitleView">
        <attr name="normal_color" format="color" />
        <attr name="select_color" format="color" />
        <attr name="indicator_color" format="color" />
        <attr name="pager_title_line_width" format="dimension" />
        <attr name="pager_title_line_height" format="dimension" />
        <attr name="line_radius" format="dimension" />
        <attr name="title_padding" format="dimension" />
        <attr name="navigator_padding" format="dimension" />
        <attr name="drawable_padding" format="dimension" />
        <attr name="android:textSize" />
        <attr name="adjust_mode" format="boolean" />
        <attr name="bold" format="boolean" />
    </declare-styleable>

    <declare-styleable name="TopBar">
        <attr name="leftIcon" format="reference" />
        <attr name="rightIcon" format="reference" />
        <attr name="title" format="string" />
        <attr name="title_color" format="color" />
        <attr name="title_text_size" format="dimension" />
        <attr name="title_typefaceAsset" format="string" />
        <attr name="title_img" format="reference" />
    </declare-styleable>

    <declare-styleable name="IndicatorView">
        <attr name="count" format="integer" />
        <attr name="radius" format="dimension" />
        <attr name="interval" format="dimension" />
        <attr name="dotColor" format="color" />
        <attr name="transitColor" format="color" />
        <attr name="transitDuration" format="integer" />
        <attr name="stretchTime" format="fraction" />
        <attr name="contractTime" format="fraction" />
    </declare-styleable>

    <attr name="zoom_scale" format="float" />
    <attr name="duration_down" format="integer" />
    <attr name="duration_up" format="integer" />

    <declare-styleable name="AnimZoomRelativeLayout">
        <attr name="zoom_scale" />
        <attr name="duration_down" />
        <attr name="duration_up" />
    </declare-styleable>

    <declare-styleable name="AnimZoomLinearLayout">
        <attr name="zoom_scale" />
        <attr name="duration_down" />
        <attr name="duration_up" />
    </declare-styleable>

    <!-- TipsBgView -->
    <declare-styleable name="TipsBgView">
        <attr name="triangle_width" format="dimension" />
        <attr name="triangle_height" format="dimension" />
        <attr name="triangle_top_margin" format="dimension" />
        <attr name="triangle_left_margin" format="dimension" />
        <attr name="triangle_pos">
            <flag name="left" value="1" />
            <flag name="right" value="2" />
            <flag name="top" value="3" />
            <flag name="bottom" value="4" />
        </attr>
        <attr name="corner_radius" format="dimension" />
        <attr name="triangle_side_corners_radius" format="dimension" />
        <attr name="triangle_top_corners_radius" format="dimension" />
        <attr name="start_color" format="color" />
        <attr name="end_color" format="color" />
    </declare-styleable>
</resources>